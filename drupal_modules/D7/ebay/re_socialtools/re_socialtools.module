<?php

/**
 * @file
 * Theme-related functionality for the CFOR site
 */

/**
 * An implementation of hook_permission
 */

function re_socialtools_permission() {
  return array(
    'administer RepEquity Social Tools settings' => array(
	  'title' => t('Administer RepEquity Social Tools custom settings'),
	  'description' => t('Administer RepEquity Social Tools custom settings'),
	),
	'use social links' => array(
	  'title' => t('Use the Post to Facebook and Twitter links'),
	  'description' => t('Allow users to access the sharing buttons'),
	),
  );
}

/**
 * An implementation of hook_menu
 */
function re_socialtools_menu()
{
  $items['admin/config/system/re_socialtools'] = array(
    'title' => 'RepEquity Social Tools Custom Settings',
    'description' => 'Custom settings for RepEquity Social Tools',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('re_socialtools_settings_form'),
    'access arguments' => array('administer RepEquity Social Tools settings'),
    'type' => MENU_NORMAL_ITEM,
  );
  return $items;
}

/**
 * Implementation of hook_page_alter
 */

function re_socialtools_page_alter(&$page) {
  drupal_add_js(array('re_socialtools' => array(
    're_socialtools_fb_app_id' => check_plain(variable_get('re_socialtools_fb_api_id','')),
    )), 'setting');
}

/**
 * A custom function that defines a settings form
 */

function re_socialtools_settings_form() {
  $form = array();

  $form['re_socialtools_fb_api_id'] = array(
    '#type' => 'textfield',
	  '#title' => t('Facebook Application ID'),
	  '#description' => t('Enter your Facebook application ID'),
	  '#default_value' => variable_get('re_socialtools_fb_api_id', ''),
  );

  return system_settings_form($form);
}

