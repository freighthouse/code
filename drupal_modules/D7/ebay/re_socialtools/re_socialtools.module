/**
 * A custom function that compiles the needed JS for our social share block
 */

function _re_socialtools_compile_js() {
  // Facebook handling
  global $base_url;
  $site_name = variable_get('site_name', 'Drupal');
  $app_id = variable_get('re_socialtools_fb_api_id', FALSE);
  $fb_title = variable_get('re_socialtools_social_share_fb_title', $site_name);
  $fb_text = variable_get('re_socialtools_social_share_fb_post', FALSE);
  $fb_url = variable_get('re_socialtools_social_share_fb_url', $base_url);
  if ($fb_text && $app_id) {
	$fb_image_fid = variable_get('re_socialtools_social_share_fb_image', FALSE);
    if ($fb_image_fid) {
      $fb_image = file_load($fb_image_fid);
	  $fb_image_path = file_create_url($fb_image->uri);
    }
    else {
      $fb_image_path = '';
    }
    $inline_js = 'jQuery(function() {jQuery("#post-to-fb").click(function(){ FB.ui({method: "feed", link: "' . $fb_url . '", picture: "' . $fb_image_path . '", name: "' . $fb_title . '", description: "' . check_plain($fb_text) . '" }); return false; });});';
    $js['http://connect.facebook.net/en_US/all.js'] = array('type', 'external');
    $js[drupal_get_path('module', 're_socialtools') . '/re_socialtools.js'] = array();
	$js[$inline_js] = array('type' => 'inline');
  }

  // Twitter handling
  $tweet_text = variable_get('re_socialtools_social_share_twitter_tweet', FALSE);
  if($tweet_text) {
    // $js['http://platform.twitter.com/widgets.js'] = array('type' => 'external');
  }
  if (is_array($js)) {
    return $js;
  }
  else {
    return array();
  }
}

