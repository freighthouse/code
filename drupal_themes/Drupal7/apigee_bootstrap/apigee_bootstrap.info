name = Apigee Bootstrap
description = A Bootstrap Sub-theme.
core = 7.x
base theme = bootstrap


;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[header]              = 'Top Bar'
regions[navigation]          = 'Navigation'
regions[highlighted]         = 'Highlighted'
regions[help]                = 'Help'
regions[apiheader]           = 'Header'
regions[promo_left]          = 'Front Page Promo Left'
regions[promo_right]         = 'Front Page Promo Right'
regions[promo]               = 'Front Page Promo - Single'
regions[front_page_content]  = 'Front Page Content'
regions[content]             = 'Content'
regions[content_bottom]      = 'Content Bottom'
regions[sidebar_first]       = 'Primary'
regions[sidebar_second]      = 'Secondary'
regions[footer]              = 'Footer'
regions[footer_left]         = 'Footer Left'
regions[footer_right]        = 'Footer Right'
regions[page_top]            = 'Page top'
regions[page_bottom]         = 'Page bottom'


;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;

stylesheets[all][] = css/field_collection.theme.css
stylesheets[all][] = css/style.css

;;;;;;;;;;;;;;;;;;;;;
;; Scripts
;;;;;;;;;;;;;;;;;;;;;

scripts[] = 'js/global.js'
scripts[] = 'js/modernizr.js'

