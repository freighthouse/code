name = eBay Main Street 2015
description = eBay Main Street theme for 2015.
screenshot = screenshot.png
version = 1.0-beta
engine = phptemplate
core = 7.x

; ========================================
; Stylesheets
; ========================================
stylesheets[all][] = stylesheets/formalize.css
stylesheets[all][] = stylesheets/ladda-themeless.min.css
stylesheets[all][] = stylesheets/style.css

; ========================================
; Scripts
; ========================================
scripts[] = js/vendor/jquery.matchHeight-min.js
scripts[] = js/vendor/modernizr.min.js
scripts[] = js/vendor/jquery.formalize.js
scripts[] = js/vendor/jquery.easing.1.3.js
scripts[] = js/vendor/timeline-min.js
scripts[] = js/vendor/storyjs-embed.js
scripts[] = js/vendor/spin.min.js
scripts[] = js/vendor/ladda.min.js
scripts[] = js/vendor/ladda.jquery.min.js
scripts[] = js/vendor/jquery.flexslider-min.js
